---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQItem[];
}

const { faqs } = Astro.props;
---

<section id="faq" class="py-16 md:py-24 bg-white">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">Frequently Asked Questions</h2>
      <p class="text-lg text-gray-600">Everything you need to know about our product.</p>
    </div>

    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <div class="border-2 border-gray-200 rounded-xl overflow-hidden hover:border-blue-300 transition-colors duration-200">
          <button
            class="w-full px-6 py-5 text-left bg-gray-50 hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 flex justify-between items-center transition-all duration-200 group"
            onclick={`document.getElementById('faq-answer-${index}').classList.toggle('hidden'); document.getElementById('faq-icon-${index}').classList.toggle('rotate-180')`}
          >
            <span class="font-semibold text-gray-900 text-lg group-hover:text-blue-600 transition-colors">{faq.question}</span>
            <div class="flex-shrink-0 ml-4">
              <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                <i id={`faq-icon-${index}`} class="fa-solid fa-chevron-down text-blue-600 transition-transform duration-200 text-sm"></i>
              </div>
            </div>
          </button>
          <div id={`faq-answer-${index}`} class="hidden px-6 py-5 bg-white text-gray-600 border-t-2 border-gray-100 leading-relaxed">
            {faq.answer}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
