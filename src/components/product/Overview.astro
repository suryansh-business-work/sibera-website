---
interface Props {
  appName: string;
  appDescription: string;
  appLogo: string;
  appCategory: string;
}

const { appName, appDescription, appLogo, appCategory } = Astro.props;
---

<section id="overview" class="py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="inline-block p-4 rounded-full bg-white/50 backdrop-blur-sm shadow-lg mb-6">
        <img src={`/icons/${appLogo}`} alt={`${appName} Logo`} class="h-16 w-16 object-contain" onerror="this.onerror=null; this.src='https://placehold.co/64x64?text=Logo'"/>
    </div>
    <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
      {appName}
    </h1>
    <p class="text-xl text-gray-700 max-w-3xl mx-auto mb-8">
      {appDescription}
    </p>
    <div class="inline-block px-4 py-1 rounded-full bg-blue-100 text-blue-800 text-sm font-semibold mb-12">
        {appCategory}
    </div>
    
    <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/signup" class="inline-flex justify-center items-center px-8 py-3 rounded-xl bg-blue-600 text-white font-semibold shadow hover:bg-blue-700 transition">
            Start Free Trial
        </a>
        <a href="#features" class="inline-flex justify-center items-center px-8 py-3 rounded-xl bg-white text-gray-700 font-semibold shadow hover:bg-gray-50 transition border border-gray-200">
            Learn More
        </a>
    </div>
  </div>
</section>
