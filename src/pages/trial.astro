---
import Page from "../layouts/Page.astro";
import { styleConfig } from "../config/style-config";
---

<Page
  title="Start Your Free Trial | Sibera"
  description="Start your 14-day free trial of Sibera. No credit card required. Get full access to all features."
>
  <!-- Hero Section -->
  <section class="relative bg-white py-20 px-4">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12">
        <div
          class="inline-flex items-center gap-2 bg-green-50 px-4 py-2 rounded-full mb-6 border border-green-200"
        >
          <span class="w-2 h-2 bg-green-500 rounded-full"></span>
          <span class="text-sm font-semibold text-green-700"
            >14-Day Free Trial</span
          >
        </div>

        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          Start Your Free Trial Today
        </h1>

        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Get full access to all Sibera features for 14 days. No credit card
          required.
        </p>

        <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-check-circle text-green-500"></i>
            <span>No credit card required</span>
          </div>
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-check-circle text-green-500"></i>
            <span>Full feature access</span>
          </div>
          <div class="flex items-center gap-2">
            <i class="fa-solid fa-check-circle text-green-500"></i>
            <span>Cancel anytime</span>
          </div>
        </div>
      </div>

      <!-- Trial Form -->
      <div
        class="max-w-2xl mx-auto bg-white border-2 border-gray-100 rounded-2xl p-8 md:p-12 shadow-lg"
      >
        <form
          class="space-y-6"
          name="free-trial"
          method="POST"
          data-netlify="true"
        >
          <input type="hidden" name="form-name" value="free-trial" />

          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label
                for="first-name"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                First Name *
              </label>
              <input
                type="text"
                id="first-name"
                name="first-name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                placeholder="John"
              />
            </div>

            <div>
              <label
                for="last-name"
                class="block text-sm font-semibold text-gray-700 mb-2"
              >
                Last Name *
              </label>
              <input
                type="text"
                id="last-name"
                name="last-name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
                placeholder="Doe"
              />
            </div>
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Work Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
              placeholder="john@company.com"
            />
          </div>

          <div>
            <label
              for="company"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Company Name *
            </label>
            <input
              type="text"
              id="company"
              name="company"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
              placeholder="Your Company Inc."
            />
          </div>

          <div>
            <label
              for="phone"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Phone Number
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
              placeholder="+1 (555) 123-4567"
            />
          </div>

          <div>
            <label
              for="company-size"
              class="block text-sm font-semibold text-gray-700 mb-2"
            >
              Company Size *
            </label>
            <select
              id="company-size"
              name="company-size"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none"
            >
              <option value="">Select company size</option>
              <option value="1-10">1-10 employees</option>
              <option value="11-50">11-50 employees</option>
              <option value="51-200">51-200 employees</option>
              <option value="201-500">201-500 employees</option>
              <option value="500+">500+ employees</option>
            </select>
          </div>

          <div class="flex items-start gap-3">
            <input
              type="checkbox"
              id="terms"
              name="terms"
              required
              class="mt-1 w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-2 focus:ring-blue-500"
            />
            <label for="terms" class="text-sm text-gray-600">
              I agree to the <a
                href="/policies/terms"
                class="text-blue-600 hover:underline font-medium"
                >Terms of Service</a
              > and <a
                href="/policies/privacy"
                class="text-blue-600 hover:underline font-medium"
                >Privacy Policy</a
              >
            </label>
          </div>

          <button
            type="submit"
            class={styleConfig.buttons.primary + " w-full text-lg py-4"}
          >
            Start Free Trial
            <i class="fa-solid fa-arrow-right ml-2"></i>
          </button>

          <p class="text-center text-sm text-gray-500">
            Your trial starts immediately. No credit card required.
          </p>
        </form>
      </div>
    </div>
  </section>

  <!-- Features Included -->
  <section class="py-20 px-4 bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">
          Everything Included in Your Trial
        </h2>
        <p class="text-xl text-gray-600">
          Get full access to all Sibera features for 14 days
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          [
            {
              icon: "headset",
              title: "Support System",
              desc: "Full ticketing and help desk capabilities",
            },
            {
              icon: "list-check",
              title: "Task Management",
              desc: "Organize and track all your projects",
            },
            {
              icon: "folder",
              title: "File Manager",
              desc: "Secure cloud storage and sharing",
            },
            {
              icon: "file-invoice",
              title: "Invoicing",
              desc: "Professional invoicing and billing",
            },
            {
              icon: "clock",
              title: "Time Tracking",
              desc: "Track time and productivity",
            },
            {
              icon: "network-wired",
              title: "IoT Platform",
              desc: "Connect and manage IoT devices",
            },
          ].map((feature) => (
            <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow border border-gray-100">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
                <i
                  class={`fa-solid fa-${feature.icon} text-blue-600 text-xl`}
                />
              </div>
              <h3 class="font-bold text-gray-900 mb-2">{feature.title}</h3>
              <p class="text-sm text-gray-600">{feature.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Page>
