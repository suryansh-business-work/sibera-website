---
interface PricingPlan {
  name: string;
  price: string;
  period: string;
  features: string[];
  recommended?: boolean;
}

interface Props {
  plans: PricingPlan[];
}

const { plans } = Astro.props;
---

<section id="pricing" class="py-16 md:py-24 bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">Simple, Transparent Pricing</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Choose the perfect plan for your needs. Upgrade or downgrade anytime.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {plans.map((plan) => (
        <div class={`relative p-8 rounded-2xl bg-white shadow-lg hover:shadow-2xl transition-all duration-300 border-2 ${plan.recommended ? 'border-blue-500 scale-105 md:scale-110' : 'border-gray-200'}`}>
          {plan.recommended && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1.5 bg-gradient-to-r from-blue-600 to-blue-500 text-white text-xs font-bold uppercase rounded-full shadow-lg">
              Most Popular
            </div>
          )}
          <div class="text-center">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">{plan.name}</h3>
            <div class="mt-6 flex items-baseline justify-center text-gray-900">
              <span class="text-5xl font-bold tracking-tight">{plan.price}</span>
              {plan.period && <span class="ml-2 text-xl font-semibold text-gray-500">{plan.period}</span>}
            </div>
          </div>
          <ul class="mt-8 space-y-4">
            {plan.features.map((feature) => (
              <li class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="flex items-center justify-center h-6 w-6 rounded-full bg-green-100">
                    <i class="fa-solid fa-check text-green-600 text-xs"></i>
                  </div>
                </div>
                <span class="ml-3 text-gray-600">{feature}</span>
              </li>
            ))}
          </ul>
          <a
            href="/signup"
            class={`mt-10 block w-full py-4 px-6 border-2 border-transparent rounded-xl text-center font-bold text-lg transition-all duration-300 ${
              plan.recommended
                ? 'bg-gradient-to-r from-blue-600 to-blue-500 text-white hover:from-blue-700 hover:to-blue-600 shadow-lg hover:shadow-xl'
                : 'bg-gray-100 text-gray-900 hover:bg-gray-200 border-gray-200'
            }`}
          >
            Get Started
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
