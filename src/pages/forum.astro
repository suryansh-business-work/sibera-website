---
import Page from "../layouts/Page.astro";

const categories = [
  {
    name: "Getting Started",
    icon: "rocket",
    articles: 45,
    topics: [
      "Quick Start Guide",
      "Account Setup",
      "First Steps",
      "Basic Configuration",
    ],
  },
  {
    name: "Product Guides",
    icon: "book",
    articles: 120,
    topics: ["Support System", "Task Management", "File Manager", "Invoicing"],
  },
  {
    name: "Integrations",
    icon: "plug",
    articles: 65,
    topics: [
      "API Documentation",
      "Third-party Apps",
      "Webhooks",
      "Custom Integrations",
    ],
  },
  {
    name: "Team Management",
    icon: "users",
    articles: 38,
    topics: [
      "User Permissions",
      "Team Collaboration",
      "Workflows",
      "Best Practices",
    ],
  },
  {
    name: "Troubleshooting",
    icon: "wrench",
    articles: 52,
    topics: ["Common Issues", "Error Messages", "Performance", "Bug Reports"],
  },
  {
    name: "Billing & Plans",
    icon: "credit-card",
    articles: 28,
    topics: ["Pricing Plans", "Payment Methods", "Invoices", "Upgrades"],
  },
];
---

<Page
  title="Knowledge Base | Sibera Forum"
  description="Find answers, guides, and discussions in our community knowledge base."
>
  <section class="bg-white py-20 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          Knowledge Base & Forum
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Find answers, learn best practices, and connect with the community
        </p>

        <!-- Search Bar -->
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input
              type="text"
              placeholder="Search articles, discussions, guides..."
              class="w-full px-6 py-4 pr-14 border-2 border-gray-200 rounded-xl focus:border-blue-500 focus:outline-none text-lg"
            />
            <button
              class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 hover:text-blue-600"
            >
              <i class="fa-solid fa-search text-xl"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- Categories Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {
          categories.map((category) => (
            <div class="bg-white border-2 border-gray-100 rounded-xl p-6 hover:border-blue-500 hover:shadow-lg transition-all">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                  <i
                    class={`fa-solid fa-${category.icon} text-blue-600 text-xl`}
                  />
                </div>
                <div>
                  <h3 class="font-bold text-xl text-gray-900">
                    {category.name}
                  </h3>
                  <p class="text-sm text-gray-600">
                    {category.articles} articles
                  </p>
                </div>
              </div>
              <ul class="space-y-2">
                {category.topics.map((topic) => (
                  <li>
                    <a
                      href="#"
                      class="text-gray-600 hover:text-blue-600 text-sm flex items-center gap-2"
                    >
                      <i class="fa-solid fa-chevron-right text-xs" />
                      {topic}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <!-- Popular Articles -->
      <div class="bg-gray-50 rounded-2xl p-8 mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Popular Articles</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {
            [
              { title: "How to get started with Sibera", views: "15.2k" },
              { title: "Setting up team permissions", views: "12.8k" },
              { title: "Integrating with third-party apps", views: "10.5k" },
              { title: "Understanding billing and invoices", views: "8.9k" },
            ].map((article) => (
              <a
                href="#"
                class="bg-white p-6 rounded-xl hover:shadow-md transition-shadow flex items-center justify-between"
              >
                <div class="flex items-start gap-4">
                  <i class="fa-solid fa-file-lines text-blue-600 text-xl mt-1" />
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-1">
                      {article.title}
                    </h4>
                    <p class="text-sm text-gray-500">{article.views} views</p>
                  </div>
                </div>
                <i class="fa-solid fa-arrow-right text-gray-400" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Community Forum -->
      <div class="text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Join Our Community Forum
        </h2>
        <p class="text-xl text-gray-600 mb-8">
          Connect with other users, share tips, and get help
        </p>
        <a
          href="#"
          class="inline-flex items-center gap-2 px-8 py-4 bg-blue-600 text-white font-bold rounded-xl hover:bg-blue-700 transition-all shadow-lg"
        >
          Visit Forum
          <i class="fa-solid fa-arrow-right"></i>
        </a>
      </div>
    </div>
  </section>
</Page>
