---
import Page from "../layouts/Page.astro";
import { blogPosts } from "../data/blog-data";
---

<Page
  title="Blog | Botify Life"
  description="Read the latest articles, tips, and updates from Botify Life."
  pageUrl="/blog"
>
  <main
    class="bg-gradient-to-b from-indigo-50 to-white min-h-screen pt-20 pb-12 px-4"
  >
    <section class="max-w-6xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-8 text-center">Blog</h1>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
          blogPosts.map((post) => (
            <article class="overflow-hidden rounded-lg border border-gray-100 bg-white shadow-xs flex flex-col h-full">
              <img
                alt=""
                src={post.image}
                class="w-full object-cover"
                style="height:250px;"
              />
              <div class="p-4 sm:p-6 flex flex-col flex-1">
                <a href={`/blog/${post.slug}`}>
                  <h3 class="text-lg font-medium text-gray-900">
                    {post.title}
                  </h3>
                </a>
                <time
                  datetime={post.date}
                  class="block text-xs text-gray-400 mt-1"
                >
                  {post.displayDate}
                </time>
                <p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
                  {post.excerpt}
                </p>
                <a
                  href={`/blog/${post.slug}`}
                  class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600"
                >
                  Find out more
                  <span
                    aria-hidden="true"
                    class="block transition-all group-hover:ms-0.5 rtl:rotate-180"
                  >
                    &rarr;
                  </span>
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </section>
  </main>
</Page>
