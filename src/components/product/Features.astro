---
interface Feature {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<section id="features" class="py-16 md:py-24 bg-gradient-to-b from-white to-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl mb-4">Powerful Features</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Everything you need to supercharge your workflow and achieve more.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="group p-8 rounded-2xl bg-white hover:bg-blue-50 transition-all duration-300 border border-gray-100 hover:border-blue-200 hover:shadow-xl">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center mb-6 text-white group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <i class={feature.icon + " text-2xl"}></i>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">{feature.title}</h3>
          <p class="text-gray-600 leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
