---
import Page from "../layouts/Page.astro";
import { styleConfig } from "../config/style-config";
---

<Page
  title="Schedule a Demo | Sibera"
  description="See Sibera in action. Schedule a personalized demo with our team to learn how Sibera can transform your business."
>
  <section class="bg-white py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left Column - Info -->
        <div>
          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
            See Sibera in <span class="text-blue-600">Action</span>
          </h1>

          <p class="text-xl text-gray-600 mb-8">
            Schedule a personalized demo and discover how Sibera can streamline
            your business operations.
          </p>

          <div class="space-y-6 mb-8">
            {
              [
                {
                  icon: "video",
                  title: "Live Demo",
                  desc: "45-minute personalized walkthrough",
                },
                {
                  icon: "comments",
                  title: "Q&A Session",
                  desc: "Get all your questions answered",
                },
                {
                  icon: "chart-line",
                  title: "Custom Solutions",
                  desc: "Tailored recommendations for your business",
                },
                {
                  icon: "rocket",
                  title: "Quick Setup",
                  desc: "Learn how to get started in minutes",
                },
              ].map((item) => (
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <i class={`fa-solid fa-${item.icon} text-blue-600`} />
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900 mb-1">{item.title}</h3>
                    <p class="text-gray-600">{item.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Right Column - Form -->
        <div
          class="bg-white border-2 border-gray-100 rounded-2xl p-8 shadow-lg"
        >
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Request a Demo</h2>

          <form
            class="space-y-5"
            name="demo-request"
            method="POST"
            data-netlify="true"
          >
            <input type="hidden" name="form-name" value="demo-request" />

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Full Name *
              </label>
              <input
                type="text"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                placeholder="John Doe"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Work Email *
              </label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                placeholder="john@company.com"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Company *
              </label>
              <input
                type="text"
                name="company"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                placeholder="Your Company Inc."
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Phone Number
              </label>
              <input
                type="tel"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
                placeholder="+1 (555) 123-4567"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                Preferred Date & Time
              </label>
              <input
                type="datetime-local"
                name="preferred-time"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">
                What would you like to see?
              </label>
              <textarea
                name="message"
                rows="3"
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none resize-vertical"
                placeholder="Tell us about your needs..."></textarea>
            </div>

            <button
              type="submit"
              class={styleConfig.buttons.primary + " w-full py-3"}
            >
              Schedule Demo
              <i class="fa-solid fa-calendar-check ml-2"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Page>
