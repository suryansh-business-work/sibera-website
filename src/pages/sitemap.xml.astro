---
const currentUrl = new URL(Astro.request.url);
const baseUrl = currentUrl.origin;

const pages = [
  { loc: `${baseUrl}/`, priority: 1.0, changefreq: "daily" },
  { loc: `${baseUrl}/about`, priority: 0.9, changefreq: "monthly" },
  { loc: `${baseUrl}/contact`, priority: 0.9, changefreq: "monthly" },
  { loc: `${baseUrl}/pricing`, priority: 1.0, changefreq: "weekly" },
  { loc: `${baseUrl}/trial`, priority: 1.0, changefreq: "weekly" },
  { loc: `${baseUrl}/demo`, priority: 0.9, changefreq: "weekly" },
  { loc: `${baseUrl}/startups`, priority: 0.9, changefreq: "weekly" },
  { loc: `${baseUrl}/customers`, priority: 0.8, changefreq: "weekly" },
  { loc: `${baseUrl}/blog`, priority: 0.8, changefreq: "daily" },
  { loc: `${baseUrl}/faq`, priority: 0.7, changefreq: "monthly" },
  { loc: `${baseUrl}/careers`, priority: 0.7, changefreq: "weekly" },
  { loc: `${baseUrl}/all-products`, priority: 0.9, changefreq: "weekly" },
];

Astro.response.headers.set("Content-Type", "application/xml");
---

?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {
    pages.map((page) => (
      <url>
        <loc>{page.loc}</loc>
        <changefreq>{page.changefreq}</changefreq>
        <priority>{page.priority}</priority>
      </url>
    ))
  }
</urlset>
