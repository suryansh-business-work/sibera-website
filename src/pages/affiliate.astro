---
import Page from "../layouts/Page.astro";
import { styleConfig } from "../config/style-config";
---

<Page
  title="Affiliate Program | Sibera"
  description="Join the Sibera Affiliate Program and earn commission promoting the best business platform."
>
  <section class="bg-white py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
          Sibera Affiliate Program
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Earn generous commissions by promoting Sibera to your audience
        </p>
      </div>

      <!-- Benefits Grid -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        {
          [
            {
              icon: "dollar-sign",
              title: "30% Commission",
              desc: "Earn 30% recurring commission on all referrals",
            },
            {
              icon: "infinity",
              title: "Lifetime Payouts",
              desc: "Get paid for as long as your referrals stay subscribed",
            },
            {
              icon: "chart-line",
              title: "Real-time Tracking",
              desc: "Track clicks, conversions, and earnings in real-time",
            },
          ].map((benefit) => (
            <div class="bg-white border-2 border-gray-100 rounded-xl p-8 text-center hover:shadow-lg transition-shadow">
              <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i
                  class={`fa-solid fa-${benefit.icon} text-blue-600 text-2xl`}
                />
              </div>
              <h3 class="font-bold text-xl text-gray-900 mb-2">
                {benefit.title}
              </h3>
              <p class="text-gray-600">{benefit.desc}</p>
            </div>
          ))
        }
      </div>

      <!-- Application Form -->
      <div
        class="max-w-2xl mx-auto bg-white border-2 border-gray-100 rounded-2xl p-8 shadow-lg"
      >
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Apply Now</h2>
        <form
          class="space-y-5"
          name="affiliate-application"
          method="POST"
          data-netlify="true"
        >
          <input type="hidden" name="form-name" value="affiliate-application" />

          <div class="grid md:grid-cols-2 gap-5">
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >First Name *</label
              >
              <input
                type="text"
                name="firstname"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
              />
            </div>
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2"
                >Last Name *</label
              >
              <input
                type="text"
                name="lastname"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
              />
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2"
              >Email *</label
            >
            <input
              type="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2"
              >Website/Social Media *</label
            >
            <input
              type="url"
              name="website"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none"
            />
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2"
              >How will you promote Sibera? *</label
            >
            <textarea
              name="promotion-plan"
              rows="4"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none resize-vertical"
            ></textarea>
          </div>

          <button
            type="submit"
            class={styleConfig.buttons.primary + " w-full py-3"}
          >
            Apply Now
            <i class="fa-solid fa-arrow-right ml-2"></i>
          </button>
        </form>
      </div>
    </div>
  </section>
</Page>
