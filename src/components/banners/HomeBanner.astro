---
// No imports needed
---

<section class="home-banner">
  <!-- Animated Gradient Background -->
  <div class="gradient-bg"></div>
  <div class="gradient-orb gradient-orb-1"></div>
  <div class="gradient-orb gradient-orb-2"></div>
  <div class="gradient-orb gradient-orb-3"></div>

  <div class="banner-container">
    <!-- Hero Content -->
    <div class="hero-content">
      <h1 class="hero-title">
        The <span class="highlight">Ultimate</span> Business Management Solution
      </h1>

      <ul class="features-list">
        <li>
          <i class="fa-solid fa-circle-check"></i>
          <span
            ><strong>All-in-one platform.</strong> Support, Tasks, Files, Invoices,
            Time Tracking, and IoT.</span
          >
        </li>
        <li>
          <i class="fa-solid fa-server"></i>
          <span
            ><strong>Seamless Integration.</strong> Connect all your business operations
            in one place.</span
          >
        </li>
        <li>
          <i class="fa-solid fa-chart-line"></i>
          <span
            >Real-time analytics and reporting for better decision making.</span
          >
        </li>
      </ul>

      <div class="cta-section">
        <span class="cta-label">I want to:</span>
        <div class="cta-buttons">
          <a href="http://localhost:5173/signup" class="cta-btn cta-primary">
            <i class="fa-solid fa-rocket"></i>
            Get Started
          </a>
          <a href="/contact" class="cta-btn cta-secondary">
            <i class="fa-solid fa-envelope"></i>
            Contact Sales
          </a>
        </div>
      </div>
    </div>

    <!-- Dashboard Preview - Full Screen -->
    <div class="dashboard-preview">
      <div class="dashboard-wrapper">
        <img
          src="https://ik.imagekit.io/esdata1/sibera/pages-screenshot/all-applications.png"
          alt="Sibera Dashboard - All Applications Overview"
          class="dashboard-image"
        />
        <div class="dashboard-glow"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .home-banner {
    position: relative;
    width: 100vw;
    min-height: 100vh;
    overflow: hidden;
    padding: 2rem 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Animated Gradient Background */
  .gradient-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      #667eea 0%,
      #764ba2 25%,
      #f093fb 50%,
      #4facfe 75%,
      #00f2fe 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 15s ease infinite;
    opacity: 0.15;
    z-index: 0;
  }

  @keyframes gradientShift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Floating Gradient Orbs */
  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
    animation: float 20s ease-in-out infinite;
    z-index: 1;
  }

  .gradient-orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, #667eea 0%, transparent 70%);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
  }

  .gradient-orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #f093fb 0%, transparent 70%);
    bottom: -10%;
    right: -10%;
    animation-delay: 7s;
  }

  .gradient-orb-3 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, #4facfe 0%, transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 14s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(30px, -30px) scale(1.1);
    }
    50% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    75% {
      transform: translate(20px, 30px) scale(1.05);
    }
  }

  /* Container */
  .banner-container {
    position: relative;
    z-index: 10;
    max-width: 1400px;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* Hero Content */
  .hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.2;
    color: #1a202c;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
  }

  .highlight {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-style: italic;
    position: relative;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%,
    100% {
      filter: brightness(1);
    }
    50% {
      filter: brightness(1.2);
    }
  }

  /* Features List */
  .features-list {
    list-style: none;
    padding: 0;
    margin: 0 auto 2.5rem;
    max-width: 700px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: left;
  }

  .features-list li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-size: 1.125rem;
    color: #2d3748;
    line-height: 1.6;
  }

  .features-list i {
    color: #667eea;
    font-size: 1.25rem;
    margin-top: 0.2rem;
    flex-shrink: 0;
  }

  /* CTA Section */
  .cta-section {
    margin-top: 2.5rem;
  }

  .cta-label {
    display: block;
    font-size: 1.25rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 1rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    border-radius: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    min-width: 180px;
  }

  .cta-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: 2px solid transparent;
  }

  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 15px rgba(102, 126, 234, 0.4);
  }

  .cta-secondary {
    background: white;
    color: #667eea;
    border: 2px solid #667eea;
  }

  .cta-secondary:hover {
    background: #f7fafc;
    transform: translateY(-2px);
    box-shadow: 0 8px 15px rgba(102, 126, 234, 0.2);
  }

  /* Dashboard Preview */
  .dashboard-preview {
    width: 100%;
    position: relative;
  }

  .dashboard-wrapper {
    position: relative;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    background: white;
    transform: perspective(1000px) rotateX(2deg);
    transition: transform 0.3s ease;
  }

  .dashboard-wrapper:hover {
    transform: perspective(1000px) rotateX(0deg) translateY(-10px);
    box-shadow: 0 35px 60px rgba(0, 0, 0, 0.2);
  }

  .dashboard-image {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    animation: fadeInUp 1s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .dashboard-glow {
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
    border-radius: 1.5rem;
    z-index: -1;
    opacity: 0;
    animation: glowPulse 3s ease-in-out infinite;
  }

  @keyframes glowPulse {
    0%,
    100% {
      opacity: 0;
    }
    50% {
      opacity: 0.3;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .home-banner {
      min-height: auto;
      padding: 3rem 1rem;
    }

    .banner-container {
      gap: 2rem;
    }

    .hero-title {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    .features-list {
      font-size: 1rem;
      gap: 0.75rem;
    }

    .features-list i {
      font-size: 1rem;
    }

    .cta-label {
      font-size: 1.125rem;
    }

    .cta-buttons {
      flex-direction: column;
      width: 100%;
      max-width: 400px;
      margin: 0 auto;
    }

    .cta-btn {
      width: 100%;
      font-size: 1rem;
      padding: 0.875rem 1.5rem;
    }

    .dashboard-wrapper {
      border-radius: 1rem;
    }

    .gradient-orb {
      filter: blur(60px);
    }
  }
</style>
